pipeline {
    agent any
    stages{
        stage('code'){
            steps{
                git url: 'https://github.com/pravinmistry33/JenkinsTest.git', branch: 'master'
            }
        }
        
        stage('Build'){
            steps{
                sh 'docker build . -t pravinmistry33/getting-started:latest'
            }
        }
        stage('Test'){
            steps{
                echo "Testing"
            }
        }
        stage('Deploy'){
            steps{
                sh "docker run -d --name pravin -p 8002:8002 pravinmistry33/getting-started:latest"
            }
        }
    }
}
